---
import { clsx } from "clsx";
import "../styles/base.css";

export interface Props {
  title: string;
}

const links = [
  { href: "/", label: "Home" },
  { href: "/about", label: "About" },
  { href: "/craftings", label: "Craftings" },
];

const { title } = Astro.props;
const { pathname } = Astro.url;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="antialiased max-w-2xl mx-auto px-4 my-8 bg-[#EDEDED] selection:bg-white selection:text-[#BB2649]"
  >
    <main class="mt-6 px-2 sm:px-0 font-ia-writer-quattro">
      <header class="mb-16 justify-between flex items-center lg:top-20">
        <a href="/" class="font-semibold italic">Javier R</a>

        <div>
          <nav
            class="flex flex-row items-start text-sm relative px-0 pb-0 md:relative md:overflow-auto scroll-pr-6"
          >
            {
              links.map((link) => (
                <a
                  href={link.href}
                  class={clsx(
                    "transition-all flex align-middle",
                    pathname === link.href
                      ? "text-zinc-900"
                      : "text-zinc-500 hover:text-zinc-800"
                  )}
                >
                  <span class="relative py-1 px-2">{link.label}</span>
                </a>
              ))
            }
          </nav>
        </div>
      </header>
      <slot />
    </main>
  </body>
</html>
